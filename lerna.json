{
    "command": {
        "publish": {
            "conventionalCommits": true,
            "message": "chore(release): publish",
            "allowBranch": "master",
            "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md", "**/example/**"]
        }
    },
    "packages": ["libs/**", "modules/**"],
    "version": "independent",
    "useWorkspaces": true,
    "npmClient": "yarn"
}
