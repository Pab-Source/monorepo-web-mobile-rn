{
  "name": "@pab-source/root",
  "description": "Template for setting up a TypeScript monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "templates/**",
      "modules/web/**",
      "libs/web/**",
      "libs/shared/**",
      "modules/mobile/**",
      "libs/mobile/**"
    ]
  },
  "scripts": {
    "web:start":"lerna run --scope '{@pab-source/lib-web-components,template-web}' start --parallel",
    "web:build":"lerna run --scope @pab-source/template-web build",
    "mobile:metro":"yarn workspace @pab-source/template-mobile start",
    "mobile:ios":"lerna run --scope @pab-source/template-mobile --stream ios",
    "mobile:pods":"lerna run --scope @pab-source/template-mobile pods",
    "mobile:android":"lerna run --scope @pab-source/template-mobile --stream android",
    "mobile:build:android": "lerna run --scope @pab-source/template-mobile --stream build:android",
    "test": "lerna run test --stream",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "lerna:publish": "lerna publish",
    "lint": "eslint --ext js,ts,tsx ."
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.14.4",
    "@commitlint/cli": "^13.2.1",
    "@jest/types": "^27.0.6",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^11.2.3",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-loader": "^8.2.3",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.12.2",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^0.6.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.0",
    "prettier-eslint": "^12.0.0",
    "pretty-quick": "^3.1.1",
    "react": "^17.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.3.2",
    "wml": "^0.0.83"
  }
}
